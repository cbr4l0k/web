---
export interface Props { type?: 'info'|'success'|'warning'|'danger'; title?: string }
const { type = 'info', title } = Astro.props as Props;
const styles = {
  info: 'border-sky-300 bg-sky-50 text-sky-800',
  success: 'border-emerald-300 bg-emerald-50 text-emerald-800',
  warning: 'border-amber-300 bg-amber-50 text-amber-800',
  danger: 'border-rose-300 bg-rose-50 text-rose-800',
}[type];
---
<div class={`rounded border ${styles} p-3 text-sm`}>
  {title && <div class="mb-1 font-semibold">{title}</div>}
  <div>
    <slot />
  </div>
</div>
