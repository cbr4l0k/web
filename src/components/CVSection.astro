---
export interface Props {
  title: string;
  id?: string;
}

const { title, id } = Astro.props;
---
<section class="mb-12" id={id}>
  <h2 class="text-2xl font-bold mb-6 text-[var(--color-heading)] border-b border-[var(--color-border)] pb-3">
    {title}
  </h2>
  <div class="space-y-6">
    <slot />
  </div>
</section>
