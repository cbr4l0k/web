---
export interface Props { label: string; value: string; hint?: string }
const { label, value, hint } = Astro.props as Props;
---
<div class="rounded border border-gray-200 bg-white p-3 shadow-sm">
  <div class="text-xs uppercase tracking-wide opacity-60">{label}</div>
  <div class="text-lg font-semibold text-[#222]">{value}</div>
  {hint && <div class="text-xs opacity-70">{hint}</div>}
</div>
