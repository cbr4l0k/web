---
import StandardPageLayout from "../../layouts/StandardPageLayout.astro";
import ProjectHeader from "../../components/ProjectHeader.astro";
import SectionBlock from "../../components/SectionBlock.astro";
import Subsection from "../../components/Subsection.astro";
import Grid from "../../components/Grid.astro";
import Callout from "../../components/Callout.astro";
import InfoList from "../../components/InfoList.astro";
import InteractiveRoadmap from "../../components/InteractiveRoadmap.astro";


export const meta = {
  title: "Personal Website",
  summary: "A minimal Astro-powered personal website with books and projects.",
  role: "Developer",
  status: "in-progress",
  period: "2025",
  stack: ["Astro", "TypeScript", "Tailwind"],
  links: [
    { label: "Repo", href: "https://github.com" },
    { label: "Live", href: "/" },
  ],
};
---
<StandardPageLayout title={meta.title}>
  <ProjectHeader title={meta.title} summary={meta.summary} role={meta.role} status={meta.status} period={meta.period} stack={meta.stack} links={meta.links} />

  <SectionBlock title="Overview" subtitle="High-level goals, scope, and outcomes.">
    <Grid cols={1}>
        <InfoList items={meta.stack.map((s) => ({ label: 'Tech', value: s }))} />
      <Callout type="danger" title="Status">
        <InfoList items={[{ label: 'Current', value: meta.status }, { label: 'Period', value: meta.period }]} />
      </Callout>
    </Grid>
  </SectionBlock>

  <SectionBlock title="Roadmap" subtitle="Planned phases and goals.">
    <InteractiveRoadmap phases={[
      { title: 'MVP', goals: [
        { label: 'Home', done: true },
        { label: 'Books', done: false },
        { label: 'Lunch', done: true },
        { label: 'Dinner', done: false },
        { label: 'Projects', done: true },
