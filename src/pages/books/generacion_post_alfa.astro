---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Nav from "../../components/Nav.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import BookHeader from "../../components/BookHeader.astro";
import LoadingScreen from "../../components/LoadingScreen.astro";
export const meta = {
title: "Generación Post-Alfa",
author: "Mark McCrindle",
summary: "An exploration of the generation born after Gen Alpha, examining their characteristics, behaviors, and impact on society.",
started: "01/06/2025",
finished: "30/06/2025",
status: "done",
};
---
<BaseLayout title={meta.title}>
<Fragment slot="nav"><Nav /></Fragment>
<Fragment slot="header"><Header /></Fragment>
<Fragment slot="footer"><Footer /></Fragment>

<BookHeader 
    title={meta.title} 
    summary={meta.summary} 
    author={meta.author} 
    status={meta.status} 
    started={meta.started}
    finished={meta.finished}
/>

<LoadingScreen message="En algún punto de mi vida voy a escribir algo acá."/>
</BaseLayout>
