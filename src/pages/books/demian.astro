---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Nav from "../../components/Nav.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import BookHeader from "../../components/BookHeader.astro";
export const meta = {
title: "Demian: Historia de la juventud de Emil Sinclair",
author: "Hermann Hesse",
summary: "Una novela que explora la b√∫squeda de identidad y el despertar espiritual de un joven en un mundo dividido entre la luz y la oscuridad.",
started: "09-02-2007",
finished: "04-03-2007",
status: "done",
slug: "book-2"
};
---
<BaseLayout title={meta.title}>
<Fragment slot="nav"><Nav /></Fragment>
<Fragment slot="header"><Header /></Fragment>
<Fragment slot="footer"><Footer /></Fragment>

<BookHeader 
    title={meta.title} 
    summary={meta.summary} 
    author={meta.author} 
    status={meta.status} 
    started={meta.started}
    finished={meta.finished}
/>

<article class="grid gap-4 md:grid-cols-2">
    <div class="rounded border border-gray-200 bg-white p-4 shadow-sm transition hover:shadow hover:-translate-y-0.5">
        <h2 class="mb-2 text-lg font-semibold text-[#222]">Key Takeaways</h2>
        <ul class="list-disc pl-5">
            <li>Insight one</li>
            <li>Insight two</li>
            <li>Insight three</li>
        </ul>
    </div>
    <div class="rounded border border-gray-200 bg-white p-4 shadow-sm transition hover:shadow hover:-translate-y-0.5">
        <h2 class="mb-2 text-lg font-semibold text-[#222]">Notes</h2>
        <p>Some placeholder notes for this book.</p>
    </div>
</article>
</BaseLayout>
