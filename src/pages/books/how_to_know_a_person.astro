---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Nav from "../../components/Nav.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import BookHeader from "../../components/BookHeader.astro";
import LoadingScreen from "../../components/LoadingScreen.astro";
export const meta = {
title: "How to Know a Person",
author: "David Brooks",
summary: "Creo que hay conversaciones en las que solo hablo yo, monologos donde creo que empatizo con el otro, pero al final de la interacción, no aprendí nada de esta otra persona. Empiezo este libro buscando cambiar esto.",
started: "06/08/2025",
status: "leyendo",
};
---
<BaseLayout title={meta.title}>
<Fragment slot="nav"><Nav /></Fragment>
<Fragment slot="header"><Header /></Fragment>
<Fragment slot="footer"><Footer /></Fragment>

<BookHeader 
    title={meta.title} 
    summary={meta.summary} 
    author={meta.author} 
    status={meta.status} 
    started={meta.started}
    finished={meta.finished}
/>
<LoadingScreen message="Aún no he escrito nada pa este libro... tipo, sigo leyendolo."/>
</BaseLayout>
