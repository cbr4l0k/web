---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Nav from "../../components/Nav.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import BookHeader from "../../components/BookHeader.astro";
import LoadingScreen from "../../components/LoadingScreen.astro";
export const meta = {
title: "Wim Hof Method: Activate Your Full Human Potential",
author: "Wim Hof",
summary: "A guide to the Wim Hof Method combining breathing techniques, cold therapy, and meditation to unlock human potential.",
started: "15/01/2025",
finished: "31/01/2025",
status: "done",
};
---
<BaseLayout title={meta.title}>
<Fragment slot="nav"><Nav /></Fragment>
<Fragment slot="header"><Header /></Fragment>
<Fragment slot="footer"><Footer /></Fragment>

<BookHeader 
    title={meta.title} 
    summary={meta.summary} 
    author={meta.author} 
    status={meta.status} 
    started={meta.started}
    finished={meta.finished}
/>

<LoadingScreen message="En algún punto de mi vida voy a escribir algo acá."/>
</BaseLayout>
