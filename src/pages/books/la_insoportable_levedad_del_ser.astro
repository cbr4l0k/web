---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Nav from "../../components/Nav.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import BookHeader from "../../components/BookHeader.astro";
import LoadingScreen from "../../components/LoadingScreen.astro";
export const meta = {
title: "La Insoportable Levedad del Ser",
author: "Milan Kundera",
summary: "A philosophical novel exploring the nature of existence, love, and the weight of human choices in Prague during the 1968 Soviet invasion.",
started: "01/02/2025",
finished: "28/02/2025",
status: "done",
};
---
<BaseLayout title={meta.title}>
<Fragment slot="nav"><Nav /></Fragment>
<Fragment slot="header"><Header /></Fragment>
<Fragment slot="footer"><Footer /></Fragment>

<BookHeader 
    title={meta.title} 
    summary={meta.summary} 
    author={meta.author} 
    status={meta.status} 
    started={meta.started}
    finished={meta.finished}
/>

<LoadingScreen message="En algún punto de mi vida voy a escribir algo acá."/>
</BaseLayout>
