---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Nav from "../../components/Nav.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import BookHeader from "../../components/BookHeader.astro";
import LoadingScreen from "../../components/LoadingScreen.astro";
export const meta = {
title: "Los Ojos del Hermano Eterno",
author: "Stefan Zweig",
summary: "A profound story exploring human nature, brotherhood, and the moral complexities of life through Zweig's masterful storytelling.",
started: "01/03/2025",
finished: "31/03/2025",
status: "done",
};
---
<BaseLayout title={meta.title}>
<Fragment slot="nav"><Nav /></Fragment>
<Fragment slot="header"><Header /></Fragment>
<Fragment slot="footer"><Footer /></Fragment>

<BookHeader 
    title={meta.title} 
    summary={meta.summary} 
    author={meta.author} 
    status={meta.status} 
    started={meta.started}
    finished={meta.finished}
/>

<LoadingScreen message="En algún punto de mi vida voy a escribir algo acá."/>
</BaseLayout>
