---
import StandardPageLayout from "../../layouts/StandardPageLayout.astro";
import BookHeader from "../../components/BookHeader.astro";
import LoadingScreen from "../../components/LoadingScreen.astro";
export const meta = {
author: "Gabriel García Márquez",
started: "01/04/2025",
finished: "30/04/2025",
status: "done",
summary: "Una historia de amor que perdura a través de décadas en el Caribe colombiano.",
title: "El Amor En Los Tiempos Del Cólera",
