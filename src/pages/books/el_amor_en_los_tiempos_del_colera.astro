---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Nav from "../../components/Nav.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import BookHeader from "../../components/BookHeader.astro";
import LoadingScreen from "../../components/LoadingScreen.astro";
export const meta = {
author: "Gabriel García Márquez",
started: "01/04/2025",
finished: "30/04/2025",
status: "done",
summary: "Una historia de amor que perdura a través de décadas en el Caribe colombiano.",
title: "El Amor En Los Tiempos Del Cólera",
};
---
<BaseLayout title={`Libro | ${meta.title}`}>
<Fragment slot="nav"><Nav /></Fragment>
<Fragment slot="header"><Header /></Fragment>
<Fragment slot="footer"><Footer /></Fragment>

<BookHeader 
    title={meta.title} 
    summary={meta.summary} 
    author={meta.author} 
    status={meta.status} 
    started={meta.started}
    finished={meta.finished}
/>

<LoadingScreen message="En algún punto de mi vida voy a escribir algo acá."/>

</BaseLayout>
